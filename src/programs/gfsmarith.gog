# -*- Mode: Shell-Script -*-
#
# Getopt::Gen specification
#-----------------------------------------------------------------------------
program "gfsmarith"
#program_version "0.01"

purpose	"Perform a semiring arithmetic operation on automaton final weights"
author  "Bryan Jurish <moocow@ling.uni-potsdam.de>"
on_reparse "warn"

#-----------------------------------------------------------------------------
# Details
#-----------------------------------------------------------------------------
details ""

#-----------------------------------------------------------------------------
# Files
#-----------------------------------------------------------------------------
#rcfile "/etc/gfsmrc"
#rcfile "~/.gfsmrc"

#-----------------------------------------------------------------------------
# Arguments
#-----------------------------------------------------------------------------
argument "FSMFILE" "Stored binary gfsm file" \
    details="
If unspecified, standard input will be read
"

#-----------------------------------------------------------------------------
# Options
#-----------------------------------------------------------------------------
#group "Basic Options"

float "multiply" m "Multiply by WEIGHT" \
  arg="WEIGHT"

float "add" a "Add WEIGHT" \
  arg="WEIGHT"

string "output" F "Specifiy output file (default=stdout)." \
    arg="FILE" \
    default="-"

#-----------------------------------------------------------------------------
# Addenda
#-----------------------------------------------------------------------------
#addenda ""

#-----------------------------------------------------------------------------
# Bugs
#-----------------------------------------------------------------------------
bugs "

None known.

"

#-----------------------------------------------------------------------------
# Footer
#-----------------------------------------------------------------------------
#acknowledge `cat acknowledge.pod`

seealso "
L<gfsmutils>
"
