#include <gfsmMem.h>

/*======================================================================
 * Methods: Constructors etc.
 */

/*--------------------------------------------------------------
 * new_full()
 */
static inline
gfsmState *gfsm_state_new_full(gboolean is_final, gfsmArcListOld *arcs)
{
  gfsmState *s = g_new(gfsmState,1);
  s->is_valid = TRUE;
  s->is_final = is_final;
  s->arcs     = arcs;
  return s;
}

/*--------------------------------------------------------------
 * new()
 */
static inline
gfsmState *gfsm_state_new(void)
{
  return gfsm_state_new_full(FALSE, NULL);
}

/*--------------------------------------------------------------
 * clear()
 */
static inline
void gfsm_state_clear(gfsmState *s)
{
  s->is_valid = FALSE;
  s->is_final = FALSE;
  s->arcs     = gfsm_arclist_free_old(s->arcs);
}

/*--------------------------------------------------------------
 * clone()
 */
static inline
gfsmState *gfsm_state_copy(gfsmState *dst, const gfsmState *src)
{
  gfsm_state_clear(dst);
  if (!src->is_valid) return dst;
  dst->is_valid = src->is_valid;
  dst->is_final = src->is_final;
  dst->arcs     = g_slist_concat(gfsm_arclist_clone_old(src->arcs), dst->arcs);
  return dst;
}


/*--------------------------------------------------------------
 * free()
 */
static inline
void gfsm_state_free(gfsmState *s, gboolean free_arcs)
{
  if (free_arcs && s->arcs) gfsm_arclist_free_old(s->arcs);
  g_free(s);
}

/*--------------------------------------------------------------
 * close()
 */
static inline
void gfsm_state_close(gfsmState *s)
{
  if (s->arc_data_temp) {
    //-- data=temp, list=temp
    s->arcs = gfsm_arclist_free_old(s->arcs);
  }
  else if (s->arc_list_temp) {
    //-- data=shared, list=temp
    g_slist_free(s->arcs);
    s->arcs = NULL;
  }
  if (s->is_temp) { g_free(s); }
}

/*======================================================================
 * Methods: Accessors
 */

/*--------------------------------------------------------------
 * is_ok()
 */
static inline
gboolean gfsm_state_is_ok(const gfsmState *s)
{ return s && s->is_valid; }


/*--------------------------------------------------------------
 * is_final()
 */
static inline
gboolean gfsm_state_is_final(const gfsmState *s)
{ return s && s->is_final; }

/*--------------------------------------------------------------
 * set_final()
 */
static inline
void gfsm_state_set_final(gfsmState *s, gboolean is_final)
{ s->is_final=is_final; }

/*--------------------------------------------------------------
 * out_degree()
 */
static inline
guint gfsm_state_out_degree(const gfsmState *s)
{ return gfsm_arclist_length_old(s->arcs); }
