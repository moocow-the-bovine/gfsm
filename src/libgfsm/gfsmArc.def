#include <stdlib.h>

/*======================================================================
 * Methods: Arcs: Constructors etc.
 */

/*--------------------------------------------------------------
 * arc_new()
 */
static inline
gfsmArc *gfsm_arc_new(void)
{
  return g_new0(gfsmArc,1);
}

/*--------------------------------------------------------------
 * arc_init()
 */
static inline
gfsmArc *gfsm_arc_init(gfsmArc *a,
		       gfsmStateId src,
		       gfsmStateId dst,
		       gfsmLabelId lo,
		       gfsmLabelId hi,
		       gfsmWeight wt)
{
  if (a) {
    a->source = src;
    a->target = dst;
    a->lower  = lo;
    a->upper  = hi;
    a->weight = wt;
  }
  return a;
}

/*--------------------------------------------------------------
 * arc_new_full()
 */
static inline
gfsmArc *gfsm_arc_new_full(gfsmStateId src, gfsmStateId dst, gfsmLabelVal lo, gfsmLabelVal hi, gfsmWeight wt)
{
  return gfsm_arc_init(g_malloc(sizeof(gfsmArc)),src,dst,lo,hi,wt);
}

/*--------------------------------------------------------------
 * arc_clone()
 */
static inline
gfsmArc *gfsm_arc_clone(gfsmArc *src)
{
  gfsmArc *dst = g_new(gfsmArc,1);
  *dst = *src;
  return dst;
}

/*--------------------------------------------------------------
 * arc_free()
 */
static inline
void gfsm_arc_free(gfsmArc *a)
{ g_free(a); }


